<h1 align="center">Listing all your groups convos </h1>
<div align="center">
<%= link_to "Create a new group",new_group_path  %>
</div>

</br>
</br>


<div align="center">
<%= will_paginate %>
<% @groups.each do |group| %>
<% @mems = group.members %>
<% @temp = current_user.id.to_s %>
<% if group.user == current_user %>
<ul class="listing">
<div class="row">
<div class="well col-md-4 col-md-offset-4">

<li class="article-title"><a href="<%= group_path(group) %>"><%= group.name %></a></li>


</div>
</div>
</ul>
<% elsif @mems.include? @temp %>
<ul class="listing">
<div class="row">
<div class="well col-md-4 col-md-offset-4">

<li class="article-title"><a href="<%= group_path(group) %>"><%= group.name %></a></li>


</div>
</div>
</ul>


<% end %>

	
<%end%>
<%= will_paginate %>
</div>
