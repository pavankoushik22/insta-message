
<% @temp = current_user.id.to_s %>

<% if current_user == @group.user %>
	<% @messages.each do |msg| %>
		<%= msg.message %>
	<% end %>
<% elsif  @group.members.include? @temp %>
	<% @messages.each do |msg| %>
		<%= msg.message %>
	<% end %>
<% else %>
	<%= controller.redirect_to root_path %>
<% end %>


<div class="row">
  <div class="col-md-12">


    <%= form_for( @new_message, :html=>{class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
      <%= f.label :group_id %>
        </div>
        <div class="col-sm-8">

          <%= f.text_field :group_id, class: "form-control", value: @group.id%>
        </div>
      </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
      <%= f.label :message %>
            </div>
          <div class="col-sm-8">
      <%= f.text_field :message,class: "form-control", placeholder: "Enter your message",autofocus: true %>
          </div>
        </div>
        
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit('send',class: "btn btn-primary btn-lg") %>
      </div>
    </div>


    <% end %>
    
  </div>
</div>