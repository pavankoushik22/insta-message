<h3> create a new group <h3>

<div class="row">
  <div class="col-md-12">


    <%= form_for( @group, :html=>{class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
      <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter group name", autofocus: true, autocomplete: 'off' %>
        </div>
      </div>
        

       
     		<%= f.collection_check_boxes :members, @usrs, :id, :email ,{:item_wrapper_class => 'checkbox_container'}%>
        </br>
		
        
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit('create',class: "btn btn-primary btn-lg") %>
      </div>
    </div>


    <% end %>
    
  </div>
</div>