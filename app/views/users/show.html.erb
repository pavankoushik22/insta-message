
<%= @user.email %>

<p> send a message </p>

<div class="row">
  <div class="col-md-12">


    <%= form_for( @message, :html=>{class: "form-horizontal", role: "form"}) do |f| %>

      
        <div class="form-group">
          <div class="control-label col-sm-2">
      <%= f.label "to" %>
            </div>
          <div class="col-sm-8">
      <%= f.text_field :user_id,class: "form-control", placeholder: @user.id %>
                </div>
              </div>
              <div class="form-group">
                <div class="control-label col-sm-2">
      <%= f.label :message %>
            </div>
          <div class="col-sm-8">
      <%= f.text_field :message,class: "form-control", placeholder: "Enter your message" %>
          </div>
        </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit('send',class: "btn btn-primary btn-lg") %>
      </div>
    </div>


<% end %>


<h2>listing of all his/her messages </h2>
<ul>
<% @mess.each do |mess| %>
<li>
<% if mess.sender_id == @user.id %>
 <%= mess.message %>
 
 <%= link_to "x", msg_path(mess),method: :delete,class: 'close',data_dismiss: 'alert'%> 
<% end %>
</li>
<% end %>
</ul>
