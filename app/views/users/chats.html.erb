
<% if @senders.size >0 %>
<h1 align="center"> Continue where you left</h1>
</br>
</br>
<div align="center">
<%= will_paginate @senders%>

<% @senders.uniq.each do |user| %>
	<% if user != current_user %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">

					<li class="article-title"><a href="<%= user_path(user) %>/#message"><%= user.email %></a></li>


				</div>
			</div>
		</ul>

	<% end %>

<%end%>

<%= will_paginate  @senders%>

</div>

<% else %>
<h1 align="center"> You have not started any conversations</h1>
<h2 align="center"> <%= link_to "way to start new convos..",users_path %>

<% end %>
